# Django Chatbot Service Configuration
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For local development (default is SQLite)
# Leave DATABASE_URL unset to use SQLite
# For production, set DATABASE_URL to PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_db

# JWT Configuration (optional, uses SECRET_KEY by default)
# JWT_SECRET=your-jwt-secret-key
# JWT_EXPIRATION=3600

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# AI/ML Models Configuration
# Transformer model cache directory
# HF_HOME=/path/to/cache

# Chatbot API Configuration
CHATBOT_MODEL=facebook/blenderbot-400M-distill
